<h1 class="show_title">Editing profile</h1>
<% form_for @profile, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
  	Others can see my email: 
  	<%= f.radio_button :email, "yes", :class => "default_button_class" %> Yes
	<%= f.radio_button :email, "no", :class => "default_button_class" %> No
  </p>
  <p>
    <%= f.label :IM %><br />
    <%= f.text_field :IM %>
  </p>
  <p>
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label :portfolio %><br />
    <%= f.text_area :portfolio %>
  </p>
  <p>
    <%= f.label :webpage %><br />
    <%= f.text_field :webpage %>
  </p>
  
  <p>
    Avatar from  file <br />
    <%= f.file_field :uploaded_data %>
  </p>
  <p>
    Avatar from web (paste url) <br />
    <%= f.text_field :avatar %> <br />
  </p>
  <p>
  	Codes listing:
    <%= f.select :listing, {'10' => 10, '20' => 20, '50' => 50, '100' => 100}  %>  	
  </p>
  <p>
    <%= f.submit 'Update', :class => "default_button_class" %>
  </p>
<% end %>
