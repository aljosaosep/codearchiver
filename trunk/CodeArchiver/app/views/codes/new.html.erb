  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :code_body %><br />
    <%= f.text_area :code_body %>
  </p>
  <p>
    <%= f.label :tag %><br />
    <%= f.text_field :tag %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :shortdescription %><br />
    <%= f.text_area :shortdescription %>
  </p>
  <p>
    <%= f.label :user %><br />
