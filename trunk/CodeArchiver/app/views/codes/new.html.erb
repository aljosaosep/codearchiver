
<h1>Add code</h1>

<% form_for(@code) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :shortdescription %><br />
    <%= f.text_field :shortdescription %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>	
  
  <p>
    <%= f.label :code_body %><br />
    <%= f.text_area :code_body %>
  </p>
  
  <p>
    <%= f.label :tag %><br />
    <%= f.text_field :tag %>
  </p>
  
  <p>
  	Program Language<br />
	<%= select :code, :program_language_id, ProgramLanguage.find(:all).collect{|p| [p.language_name, p.id]} %>
  </p>
  
  <p>
  	Category<br />
	<%= select :code, :category_id, Category.find(:all).collect{|c| [c.name, c.id]} %>
  </p>
  
  <p>
  	Type<br />
	<%= select :code, :type_id, Type.find(:all).collect{|t| [t.name, t.id]} %>
  </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
  
<% end %>
