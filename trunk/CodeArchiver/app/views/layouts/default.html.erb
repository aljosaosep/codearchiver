<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<title>CodeArchiver</title>
		<%= stylesheet_link_tag 'style' %>
		<%= javascript_include_tag :defaults %>
	</head>
	<body>
		
		<div id="wrapper">
			<div id="sidebar">
				
				<div id="slika" onclick="window.location='/codes'">	
				</div>
				
				
				
				<a class="buttons" href="/main">Main</a> 
				<a class="buttons" href="/codes">Library</a> 
				<a class="buttons" href="/codes/new">Add Code</a> 
				<a class="buttons" href="/help">Help</a>
			</div>
			<div id="main">
				
				<div id="loginbar">
						<% if session[:user_id] %>
							<span>Logged in as: </span><a href="/profile"><%= session[:username] %></a>!
							<%= link_to "Log out", :logout, :class => "logout_button" %>
						<% else %>
							<% form_tag sessions_path do %>
								U: <input type="text" name="login">
								P: <input type="password" name="password">
								<%= submit_tag "Log in", :class => "login_button" %><br/>
								Don't have an account? <%= link_to "Sign up!", signup_path %>
							<%end%>
						<% end %>
				</div>
				
				<%= yield %>
			</div>
			<div style="clear: both"></div>
		</div>
	</body>
</html>
